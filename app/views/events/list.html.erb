<% content_for :title, "Approve Events" %>
<table id="events-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Location</th>
            <th>Type</th>
            <th>Tags</th>
            <th>URL</th>
            <th>Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @events.each do |event| %>
            <tr>
                <td>
                    <a href="<%= event_path(event) %>">
                        <%= event.title %>
                    </a>
                </td>
                <td><%= event.description %></td>
                <td><%= format_time(event.start_time) %></td>
                <td><%= format_time(event.end_time) if event.end_time.present? %></td>
                <td><%= event.location %></td>
                <td><%= event.event_type %></td>
                <td>
                    <% event.tags.each do |tag| %>
                        <span class="tag"><%= tag %></span>
                    <% end %>
                </td>
                <td>
                    <%= format_url(event.url) %>
                </td>
                <td>
                    <%= format_cost(event.cost) %>
                </td>
                <td>
                    <%= link_to("👍", approve_event_path(event), data: {turbo_method: :post}) %> | <%= link_to("👎", reject_event_path(event), data: {turbo_method: :post}) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
