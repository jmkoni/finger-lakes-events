<%= javascript_include_tag 'currency', 'data-turbo-track': 'load', defer: true %>
<%= form_with(model: event, class: "event-form") do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="required">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="required" data-controller="geolocation" data-action="click@window->geolocation#closeSearchResults">
    <%= form.label :location %>
    
    <%= form.hidden_field :latitude, data: { geolocation_target: "latitude" } %>
    <%= form.hidden_field :longitude, data: { geolocation_target: "longitude" } %>
    
    <div class="location-controls">
      <div class="search-container">
        <%= form.text_field :location, 
            data: { geolocation_target: "location", action: "input->geolocation#searchAddress" },
            placeholder: "Search for an address or place...",
            class: "address-search-input" %>
        <div data-geolocation-target="searchResults" class="search-results"></div>
      </div>
      
      <button type="button" 
              data-geolocation-target="button"
              data-action="click->geolocation#getCurrentLocation"
              class="geolocation-button">
        üìç Use My Location
      </button>
    </div>
    
    <div data-geolocation-target="status" class="status-message"></div>
  </div>

  <div class="required">
    <%= form.label :start_time %>
    <%= form.datetime_field :start_time %>
  </div>

  <div>
    <%= form.label :end_time %>
    <%= form.datetime_field :end_time %>
  </div>

  <div>
    <%= form.label :cost %>
    <%= form.text_field :cost, data: {type: "currency"}, placeholder: "$0.00", class: "dollar" %>
  </div>

  <div>
    <%= form.label :url %>
    <%= form.url_field :url %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :pre_registration_required, "Pre-registration Required?" %>
    <%= form.check_box :pre_registration_required %>
  </div>

  <div>
    <%= form.label :tags %>
    <%= form.select :tags,
        options_for_select(Event::TAGS.sort),
     multiple: true
    %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
