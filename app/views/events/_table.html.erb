<table id="events-table#{approve ? '-approved' : ''}">
    <thead>
        <tr>
            <th>Title</th>
            <th>Location</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>URL</th>
            <th>Cost</th>
            <% if approve %>
                <th>Pre-Registration Required?</th>
                <th>Description</th>
                <th>Tags</th>
                <th>Actions</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <% events.each do |event| %>
            <tr>
                <td>
                    <a href="<%= event_path(event) %>">
                        <%= event.title %>
                    </a>
                </td>
                <td><%= event.location %></td>
                <td><%= format_time(event.start_time) %></td>
                <td><%= format_time(event.end_time) if event.end_time.present? %></td>
                <td><%= format_url(event.url) %></td>
                <td><%= format_cost(event.cost) %></td>
                <% if approve %>
                    <td><%= event.pre_registration_required ? "Yes" : "No" %></td>
                    <td><%= event.description %></td>
                    <td><%= event.tags.to_sentence %></td>
                    <td>
                        <%= link_to("👍", approve_event_path(event), data: {turbo_method: :post}) %> | <%= link_to("👎", reject_event_path(event), data: {turbo_method: :post}) %>
                    </td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>
