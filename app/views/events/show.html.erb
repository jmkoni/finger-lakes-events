<p style="color: green"><%= notice %></p>
<% content_for :title, @event.title %>

<%= render @event %>

<div>
  <% if current_user %>
    <%= link_to "Edit this event", edit_event_path(@event) %> |
  <% end %>
  <%= link_to "Back to events", events_path %>

  <% if current_user %>
    <br>
    <%= button_to "Destroy this event", @event, method: :delete %>
  <% end %>
</div>
